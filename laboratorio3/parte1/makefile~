#Se definen los objetos , estos son los archivos que necesitan
#para crear el ejecutable .

OBJS1 = punteros.cpp  
OBJS2 = punteros_funciones.cpp 
OBJS3 = punteros_funciones2.cpp 
OBJS4 = punteros_funciones3.cpp
OBJS5 = punt_punt.cpp
OBJS6 = punteros_arreglos.cpp


EXE1 = punteros.o
EXE2 = punteros_funciones.o
EXE3 = punteros_funciones2.o
EXE4 = punteros_funciones3.o
EXE5 = punt_punt.o
EXE6 = punteros_arreglos.o

#Se define e l compilador

CC = g++

#Bandera de depuracion

DEBUG = -g

#Banderas de compilacion

CFLAGS = -c
#CFLAGS = -Wall -c $(DEBUG) -pedantic

#Banderas para el Linker

LFLAGS = -Wall $(DEBUG) -pedantic
	
#Archivo Ejecutable que se va a crear

TARGET1 = punteros
TARGET2 = punteros_funciones
TARGET3 = punteros_funciones2
TARGET4 = punteros_funciones3
TARGET5 = punt_punt
TARGET6 = punteros_arreglos

#Reglas a ejecutar cuando se ejecute make
$(TARGET1) : $(OBJS1)
	$(CC) -o $(TARGET1) $(OBJS1)
EXE1 : $(OBJS1)
	$(CC) $(CFLAGS) $(OBJS1)

$(TARGET2) : $(OBJS2)
	$(CC) -o $(TARGET2) $(OBJS2)
EXE2 : $(OBJS2)
	$(CC) $(CFLAGS) $(OBJS2)

$(TARGET3) : $(OBJS3)
	$(CC) -o $(TARGET3) $(OBJS3)
EXE3 : $(OBJS3)
	$(CC) $(CFLAGS) $(OBJS3)

$(TARGET4) : $(OBJS4)
	$(CC) -o $(TARGET4) $(OBJS4)
EXE4 : $(OBJS4)
	$(CC) $(CFLAGS) $(OBJS4)

$(TARGET5) : $(OBJS5)
	$(CC) -o $(TARGET5) $(OBJS5)
EXE5 : $(OBJS5)
	$(CC) $(CFLAGS) $(OBJS5)

$(TARGET6) : $(OBJS6)
	$(CC) -o $(TARGET6) $(OBJS6)
EXE6 : $(OBJS6)
	$(CC) $(CFLAGS) $(OBJS6)

clean :
	rm -r *.o


